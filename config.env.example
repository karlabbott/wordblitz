# WordBlitz Environment Configuration
# Copy this file to .env and edit the values

# The hostname for your WordBlitz instance (used for SSL cert and Nginx)
WORDBLITZ_HOSTNAME=wordblitz.example.com

# Flask secret key (generate a random one for production)
SECRET_KEY=change-me-to-a-random-secret-key

# PostgreSQL connection
DATABASE_URL=postgresql://wordblitz:wordblitz@localhost:5432/wordblitz

# PostgreSQL credentials (used by setup script)
DB_NAME=wordblitz
DB_USER=wordblitz
DB_PASSWORD=wordblitz

# Email for Let's Encrypt certificate notifications
LETSENCRYPT_EMAIL=admin@example.com

# Gunicorn settings
GUNICORN_WORKERS=3
GUNICORN_BIND=127.0.0.1:5000
